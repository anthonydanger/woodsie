<%= form_for @site, html: { multipart: true } do |f| %>
  <% if @site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :lat %>
    <%= f.text_field :lat, class: "form-control" %>
  </div>  
  <div class="form-group">
    <%= f.label :lon %>
    <%= f.text_field :lon, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :cost %>
    <%= f.text_field :cost, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :occupancy %>
    <%= f.text_field :occupancy, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :url %>
    <%= f.url_field :url, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :lead_time %>
    <%= f.text_field :lead_time, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :style %>
    <%= f.text_field :style, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>